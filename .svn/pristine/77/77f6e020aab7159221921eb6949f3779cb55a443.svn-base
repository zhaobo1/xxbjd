<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="../css/api.css">
    <link rel="stylesheet" href="../css/news.css">
</head>
<body style="background-color:#fff">
    <header class="newWindowbackHeader">
        <a class="back"><img src="../image/back.png" alt=""></a>
        <span style="margin-left:0;">资讯详情</span>
        <img src="../image/fenxiang.png" id="share" alt="">
    </header>
    <div class="content_info">
        <div class="title" id="title"></div>
        <div class="otb">亲子鉴定<span class="time" id="time" style="margin-left:0.32rem"></span></div>
    </div>
    <div class="content_text_info" >

    </div>
</body>
<script type="text/javascript" src="../script/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/flexible.js"></script>
<script type="text/javascript" src="../script/common.js"></script>
<script type="text/javascript" src="../script/base.js"></script>
<script type="text/javascript" src="../script/interface.js"></script>
<script>
var Share;
apiready=function(){
  var id = api.pageParam.id;
  api.showProgress({
    title: '加载中...',
    modal: false
  });
  xbinterface.ajaxs('mpi/getNewsById','get',function(data){
    $('#title').html(data.TITLE);
    $('#time').html(data.CREATE_DATE);
    $('.content_text_info').html(data.INFO);
    setTimeout(function(){api.hideProgress();},500)
  },{values:{id:id}})
}
document.getElementById('share').addEventListener('click',function(){
	openshare({title:"分享至",arr:["微信好友","朋友圈","手机QQ","QQ空间","新浪微博","复制链接"]})
})
function openshare(option){
    var defaults = {
        title:'分享至',
        arr:["微信好友","朋友圈","手机QQ","QQ空间","新浪微博","复制链接"]
    };
    var options = $.extend({},defaults,option);
    if(typeof Share === 'object' && Share!=null)
    {
        //已经实例化分享对象；
    }else {
        Share = new ShareModule(options);
    }
    if(!$('#sharebox').length)
    {
        Share.open();
    }
}
</script>
</html>
