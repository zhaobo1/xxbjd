@import "common";
html,body{
    height: 100%;
    background-color: #f4f4f4;
}
.newWindowbackHeader{
    @extend %newWindowbackHeader;
}
.newslist{
    width: 100%;
    .item{
        width: 100%;
        @extend %flexStyle;
        align-items: stretch;
        justify-content: space-between;
        padding: 0.08rem;
        background-color: #fff;
        margin-bottom: 0.16rem;
        border-bottom: 1px solid #e5e4e4;
        box-sizing: border-box;
        .left{
            position: relative;
            flex:1.5;
            padding: 0.32rem;
             box-sizing: border-box;
            .name{
                color: #000;
                @include font-dpr(14px);
            }
            .btom{
                color: #b6b6b6;
                @include font-dpr(10px);
                position: absolute;
                bottom: 0.32rem;
                .time{
                    margin-left: 0.4rem;
                }
            }
        }
        .right{
            flex:1;
            img{
                width: 100%;
                height: 2.8rem;
                display: block;
                max-width: 100%;
            }
        }
    }
}
//资讯详情

#share{
    width: 0.533333rem;
    height: 0.48rem;
    display: block;
}
.content_info{
    padding: 0.32rem;
    div.title{
        color: #000;
        @include font-dpr(17px);
        line-height: 1.5;
        margin:0.2rem 0 0.5rem 0;
    }
    div.otb{
        color: #b6b6b6;
        @include font-dpr(10px);
    }

}
.content_text_info{
    border-top: 1px solid #e5e4e4;
    padding: 0.32rem;
}
